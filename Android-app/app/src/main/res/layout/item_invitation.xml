<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_invitation"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginEnd="8dp">

    <LinearLayout
        android:id="@+id/event_invitation_body"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <ImageView
        android:id="@+id/image_event_item_invitation"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/ic_missing_event_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/text_event_name_item_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Event Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_invited_user_name_item_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Invited by: Veljko N95"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:paddingLeft="3dp">

            <ImageView
                android:id="@+id/image_calendar_item_invitation"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/text_event_date_item_invitation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Event Start Date"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        >
        <ImageView
            android:id="@+id/image_goind_item_invitation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_check" />
        <ImageView
            android:id="@+id/image_interested_item_invitation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_interested" />
        <ImageView
            android:id="@+id/image_not_interested_item_invitation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_not_interested" />

    </LinearLayout>



</LinearLayout>

