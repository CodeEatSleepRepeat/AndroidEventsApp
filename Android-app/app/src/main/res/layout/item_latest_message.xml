<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_latest_message_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_latest_message_item"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        app:civ_border_color="@android:color/holo_green_dark"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_veljko" />

    <TextView
        android:id="@+id/text_username_latest_message_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Username"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/text_latest_message_latest_message_item"
        app:layout_constraintStart_toEndOf="@+id/image_user_latest_message_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_latest_message_latest_message_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Latest Message"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_user_latest_message_item"
        app:layout_constraintTop_toBottomOf="@+id/text_username_latest_message_item" />
</androidx.constraintlayout.widget.ConstraintLayout>